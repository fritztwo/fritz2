<div class="max-w-lg mx-auto grid gap-5 lg:grid-cols-3 lg:max-w-none">

    {% for post in postslist | reverse %}
        <div class="flex flex-col rounded-lg shadow-lg overflow-hidden bg-slate-500">
            <div class="flex-shrink-0">
                <img class="h-48 w-full object-cover" src="/img/{{ post.data.image }}" alt="title image">
            </div>
            <div class="flex-1 bg-gray-800 p-6 flex flex-col justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-fg-highlight">{{ post.data.type }}</p>
                    <a href="{{ post.url | url }}" class="block mt-2">
                        <p class="text-xl font-semibold text-white">{{ post.data.title }}</p>
                        <p class="mt-3 text-base text-gray-300">{{ post.data.description }}</p>
                    </a>
                </div>
                <div class="mt-6 flex items-center">
                    <div class="">
                        <p class="text-sm font-medium text-fg-highlight">
                            <a href="https://github.com/{{ post.data.author }}" target="_blank" class="hover:underline">{{ post.data.author }}</a>
                        </p>
                        <div class="flex space-x-1 text-sm text-gray-300">
                            <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
                            <span aria-hidden="true"> Â· </span>
                            <span>{{ post.data.readtime }} min read </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>